<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_frameLayout">

</FrameLayout>
    <SearchView
        android:layout_width="match_parent"
        android:id="@+id/searchview"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="This Button Does Nothing"
        android:background="#8e4883e9"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_main_button"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:onClick="selectCompound"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/searchview"
        android:layout_above="@id/activity_main_button"
        android:id="@+id/listview"/>
</RelativeLayout>